@model IEnumerable<parc_auto_v1.Models.Demandes>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #e9ecef;
        }
        .container-custom {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin: 0 30px;
        }
        .table-custom {
            table-layout: fixed;
            width: 100%;
            overflow: hidden;
            font-size: 14px;
            margin-right: 20px;
        }
        .table-custom th, .table-custom td {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 200px;
            padding: 15px;
        }
        .table-custom th {
            text-align: center;
            background-color: #343a40;
            color: #fff;
        }
        .table-custom td {
            text-align: left;
        }
        .table-custom tbody tr:hover {
            background: #f1f1f1;
        }
        .btn-custom {
            border-radius: 50px;
            padding: 5px 15px;
        }
        .form-inline .input-group {
            width: 100%;
        }
        .form-inline .form-control {
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
        }
        .form-inline .btn-outline-secondary {
            border-top-right-radius: 50px;
            border-bottom-right-radius: 50px;
        }
        .table {
            margin-top: 20px;
        }
        .btn {
            margin: 2px;
        }
        .alert {
            border-radius: 10px;
        }
        media (max-width: 768px) {
            .container-custom {
                margin: 0;
            }
            .table-custom {
                font-size: 12px;
                margin-left: 0;
                margin-right: 0;
            }
            .table-custom th, .table-custom td {
                display: block;
                width: 100%;
                box-sizing: border-box;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5 container-custom">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }

        <div class="form-inline mb-4">
            <input type="text" id="searchString" placeholder="Search by Id Employe or Matricule" class="form-control form-control-lg mr-2"/>
          
        </div>

        <div class="mb-4">
            <a asp-action="DownloadExcel" class="btn btn-success btn-custom">Download Excel</a>
        
        </div>

        <div id="demandesList">
            @Html.Partial("_DemandesListPartial", Model)
        </div>

    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#searchString').on('input', function () {
                var searchString = $(this).val();
                $.ajax({
                    url: '@Url.Action("SearchDemandes")',
                    data: { searchString: searchString },
                    success: function (result) {
                        $('#demandesList').html(result);
                    },
                    error: function () {
                        alert('An error occurred while searching.');
                    }
                });
            });
        });
    </script>
</body>
</html>
