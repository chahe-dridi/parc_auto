@model IEnumerable<parc_auto_v1.Models.VisiteTechnique>

@{
    ViewData["Title"] = "Visite Technique";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href=" " rel="stylesheet" />
    <style>
        body {
            background: #e9ecef;
        }

        .container-custom {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .table-custom thead {
            background: #343a40;
            color: #fff;
        }

        .table-custom tbody tr:hover {
            background: #f1f1f1;
        }

        .btn-custom {
            border-radius: 50px;
            padding: 5px 15px;
        }

        .form-inline .input-group {
            width: 100%;
        }

        .form-inline .form-control {
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
        }

        .form-inline .btn-outline-secondary {
            border-top-right-radius: 50px;
            border-bottom-right-radius: 50px;
        }

        .table {
            margin-top: 20px;
        }

        .btn {
            margin: 2px;
        }

        .alert {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5 container-custom">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }

        <div class="row mb-4">
            <div class="col-md-2 mb-2 mb-md-0">
                <a asp-action="Create" class="btn btn-primary btn-block btn-custom">Create New</a>
            </div>
            <div class="col-md-8">
                <form class="form-inline float-right" asp-controller="VisiteTechnique" asp-action="Index">
                    <div class="input-group">
                        <input type="text" class="form-control" name="searchString" placeholder="Search by Matricule..." value="@ViewData["CurrentFilter"]">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-bordered table-hover table-custom">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().DateEchance)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DateValide)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Alert)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PrixUnitaire)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Voiture.Matricule)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DateEchance)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateValide)</td>
                        <td>@Html.DisplayFor(modelItem => item.Alert)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrixUnitaire)</td>
                        <td>@Html.DisplayFor(modelItem => item.Voiture.Matricule)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning btn-custom">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-custom">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger btn-custom">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
