@model List<parc_auto_v1.Models.Sinistre>

@{
    ViewData["Title"] = "Sinistres";
}

<h2>Sinistres</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().DateDommage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Observation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AcceptationPourFixe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EtatDeVoiture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PrixFixe)
            </th>
          
            <th>Voiture</th>
             
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDommage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcceptationPourFixe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EtatDeVoiture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrixFixe)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Voiture.Matricule)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this?');" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
